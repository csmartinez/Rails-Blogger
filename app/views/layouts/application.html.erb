<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<div class="container">
  <div class="nav">
      <nav class="main-nav">
        <ul class="list-unstyled">
          <button class="btn btn-primary btn-xs"><%= link_to 'Home', "/" %></button>
          <button class="btn btn-primary btn-xs"><%= link_to 'New Post', "/posts/new" %></button>
        </ul>
      </nav>
    </div>
  <h5><%= flash[:alert] %></h5>
  <h5><%= flash[:notice] %></h5>

<%= yield %>
</div>
</body>
</html>
